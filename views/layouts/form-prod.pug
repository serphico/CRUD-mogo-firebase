doctype html
html
    include ../partials/head.pug    
    body
        include ../partials/menu.pug
        div(style="padding: 5%;")
            h1 Agregar Producto
            form(class="col-10" action="/form-upload-productos" method="POST")
                div(class="mb-6")
                    label(for="title" class="form-label") Nombre del producto
                    input(type="text" class="form-control" id="title" name="title")

                div(class="mb-6")
                    label(for="price" class="form-label") Precio del producto
                    input(type="number" class="form-control" id="price" name="price")

                div(class="mb-6")
                    label(for="thumbnail" class="form-label") URL de imagen
                    input(type="text" class="form-control" id="thumbnail" name="thumbnail")
                br       
                input(type="submit" class="btn btn-primary" value="Enviar")