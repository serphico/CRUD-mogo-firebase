doctype html
html(lang="en") 
    include ../partials/head.pug
    body
        include ../partials/menu.pug
        section(class="container-fluid")
            div(class="row")
            each prod in res
                table(class="table table-striped")
                    thead
                        tr            
                            th(scope="col") Producto
                            th(scope="col") Precio
                            th(scope="col") Imagen
                    tbody
                        tr
                            td(class="titleProd col-3")= prod.title
                            td(class="priceProd col-3" )= prod.price
                            td(class="col-5")
                                img(class="thumbnailProd", src= prod.thumbnail )
                            td(class="col-2")
                                button(id="delete-prodCart"+prod.id onclick="deleteProdCart('"+prod.id+"')" class="btn btn-primary col-4 deleteProdCart")
                                    i(class="bi bi-x-circle-fill" style="color:white;")
    script(src="/js/interactive-btn-firebase.js")                                 